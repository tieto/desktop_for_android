<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="MenubarTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">#404040</item>
    </style>

    <style name="ApplicationMenuTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">#404040</item>
    </style>

    <style name="popupMenu" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">#404040</item>
    </style>

    <style name="AppMenuWithTitleTheme" parent="@android:style/Theme">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:background">#404040</item>
    </style>

    <style name="functional_button" parent="android:Widget.Holo.Button.Borderless"></style>

    <style name="exitdialog" parent="@android:style/Theme.Holo.Dialog"></style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>